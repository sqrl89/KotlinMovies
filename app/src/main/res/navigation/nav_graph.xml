<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/popular">

    <fragment
        android:id="@+id/popular"
        android:name="com.alex.kotlinmovies.view.popular.PopularMoviesFragment"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_popular_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_popular_to_favorites"
            app:destination="@id/favorites" />
    </fragment>
    <fragment
        android:id="@+id/favorites"
        android:name="com.alex.kotlinmovies.view.favorites.FavoriteMoviesFragment"
        android:label="fragment_favorite_movies"
        tools:layout="@layout/fragment_favorite_movies" >
        <action
            android:id="@+id/action_favorites_to_action_popular2"
            app:destination="@id/popular" />
        <action
            android:id="@+id/action_favorites_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.alex.kotlinmovies.view.detail.MovieDetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_popular"
            app:destination="@id/popular" />
        <action
            android:id="@+id/action_detailFragment_to_favorites"
            app:destination="@id/favorites" />
    </fragment>
</navigation>